/*头部样式*/
.HzSite-header {
  background: #ff841d;
  color: #FFFFFF;
  height: 44px;
  width: 100%;
}
.HzSite-header > .back {
  height: 44px;
  width: 50px;
  text-align: center;
  float: left;
}
.HzSite-header > .back > a {
  height: 100%;
  width: 100%;
  display: block;
}
.HzSite-header > .back .icon-back {
  display: inline-block;
  font-size: 18px;
  padding-top: 14px;
  color: #ffffff;
}
.HzSite-header h1 {
  margin: 0 auto;
  font-size: 19px;
  font-weight: 600;
  font-family: "microsoft yahei";
  width: 100%;
  text-align: center;
  height: 44px;
  padding-top: 10px;
}
.HzSite-header .icon-app {
  margin: 0 auto;
  float: right;
  width: 50px;
  height: 44px;
}
.HzSite-header .icon-app a {
  width: 100%;
  height: 100%;
  display: block;
  width: 50px;
  height: 44px;
}
.HzSite-header .icon-app img {
  display: block;
  width: 33px;
  height: 33px;
  margin-top: 5px;
  margin-left: 10px;
}
/*友情链接样式*/
.HzSite-link {
  width: 250px;
  height: 660px;
  padding-top: 5px;
  margin: 0 auto;
}
.HzSite-link .link-banner {
  border: 1px solid black;
  float: left;
  margin-right: 5px;
  padding-right: 5px;
  margin-top: 5px;
  background-color: #EFEFEF;
}
.HzSite-link .link-banner a {
  display: inline-block;
  height: 40px;
  line-height: 40px;
}
.HzSite-link .link-banner img {
  display: inline-block;
  width: 16px;
  height: 16px;
  position: relative;
  margin-left: 5px;
}
/*底部导航栏样式*/
.HzSite-nav {
  margin-top: 20px;
  height: 36px;
  background-color: #ebebeb;
  background: -webkit-gradient(linear, 0 0, 0 100%, from(#ffffff), to(#ebebeb));
  padding-left: 8px;
  font-size: 15px;
  line-height: 36px;
  border-bottom: 1px solid #CCCCCC;
  border-top: 1px solid #CCCCCC;
  width: 100%;
}
/*底部*/
.HzSite-footer {
  width: 100%;
  margin-top: 20px;
  background-color: #EFEFEF;
  height: 120px;
  text-align: center;
}
/*底部上栏*/
.HzSite-footer-top {
  height: 40px;
  line-height: 40px;
  border-bottom: 1px solid #CCCCCC;
  border-top: 1px solid #CCCCCC;
  box-sizing: border-box;
}
.HzSite-footer-top .row {
  margin-right: 0px;
}
.HzSite-footer-top div {
  border-left: 1px solid #CCCCCC;
  padding-left: 0px;
  padding-right: 0px;
}
.HzSite-footer-top img {
  display: inline-block;
  width: 15px;
  height: 15px;
  position: relative;
  top: -2px;
  left: -2px;
}
/*底部下栏*/
.HzSite-footer-bottom {
  margin-top: 10px;
}
.HzSite-footer-bottom p {
  margin: 0 auto;
}
.HzSite-footer-bottom a {
  font-size: 10px;
}
