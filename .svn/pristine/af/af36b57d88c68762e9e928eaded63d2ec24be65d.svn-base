/*头部header*/

//搜索栏

//导航栏
.index-nav{
  padding: 6px 0;
  .index-inner{
    text-align: center;
    margin-top: 16px;
    >a{
      display: block;
      >img{
        width: 50px;
        margin: 0 auto;
      }
      >p{
        color: #5a5a5a;
        margin-top: 3px;
        font-size: 13px;
      }
    }
    &:nth-last-child(-n+4){
      display: none;
    }
  }
}

// 折扣推荐
.index-title-head{
  height: 35px;
  background-color: #ff9000;
  background: -webkit-gradient(linear,0 0,0 100%,from(#ffaf47),to(#ff9000));
  border-bottom: solid 1px #ffc881;
  line-height: 35px;
  overflow: hidden;
  color: #fff;
  padding-left: 10px;
  font-weight: bold;
  font-size: 18px;
  clear: both;
  >span{
    float: left;
  }
  >img{
    width: 20px;

    float: right;
    margin-right: 10px;
    color: #FFF;
    margin-top: 8px;
  }
}

.index-cuxiao{
  >a{
    display: block;
    width: 100%;
  }
  >.index-cuxiao-pro{
    padding-bottom: 10px;
    float: left;
    width: 100%;
    >.index-cuxiaoPro-list{
      background-color: #ffffff;
      text-align: left;
      font-size: 14px;
      max-width: 960px;
      margin: 0px auto;
      li{
        padding: 14px 8px;
        position: relative;
        >a{
          display: block;
          >.pic{
            float: left;
            width: 110px;
            >img{
              width: 100px;
            }
          }
          >.info{
            padding-left: 90px;
            font-size: 14px;
            line-height: 24px;
            >.title{
              color: #333333;
              word-break: break-all;
              font-size: 15px;
              line-height: 19px;
              min-height: 57px;
              text-align: left;
              font-weight: normal;
              >span{
                color: #ff6c00;
                display: inline;
              }
            }
            >.other{
              margin-top: 8px;
              color: #a1a1a1;
              >.mall{
                color: #a1a1a1;
                font-size: 12px;
                float: left;
              }
              >.common{
                color: #a1a1a1;
                font-size: 12px;
                float: right;
                >i{
                  background-image: url("data:image/svg+xml;charset=utf-8,<svg xmlns='http://www.w3.org/2000/svg' viewBox='0 0 1024 1024' width='17'><path fill='#a1a1a1' d='M924.504962 664.898711 97.819886 664.898711c-17.557888 0-31.795147-14.241352-31.795147-31.795147l0-508.732583c0-17.557888 14.238282-31.792077 31.795147-31.792077l241.198387 0 149.664671-149.661601c6.209422-6.212492 14.34266-9.31618 22.478967-9.31618s16.269545 3.102664 22.479991 9.31618L683.306574 92.57788l241.198387 0c17.557888 0 31.795147 14.235213 31.795147 31.792077L956.300109 633.10254C956.300109 650.657358 942.061826 664.898711 924.504962 664.898711zM892.708791 156.169197l-222.569098 0c-8.428973 0-16.518209-3.354398-22.478967-9.31618l-136.498814-136.494721-136.498814 136.494721c-5.961782 5.961782-14.051017 9.31618-22.479991 9.31618l-222.569098 0L129.61401 601.304324l763.093758 0L892.707768 156.169197zM288.592814 378.735226m-63.591317 0a62.143 62.143 0 1 0 127.182634 0 62.143 62.143 0 1 0-127.182634 0ZM511.161912 378.735226m-63.591317 0a62.143 62.143 0 1 0 127.182634 0 62.143 62.143 0 1 0-127.182634 0ZM733.73101 378.735226m-63.591317 0a62.143 62.143 0 1 0 127.182634 0 62.143 62.143 0 1 0-127.182634 0Z' transform='translate(0, 812) scale(1, -1)'/></svg>");
                  width: 14px;
                  height: 15px;
                  display: inline-block;
                  background-size: auto 100%;
                  background-repeat: no-repeat;
                  background-position: center;
                  vertical-align: middle;
                  margin-right: 4px;
                }
              }
            }
          }
        }
      }
    }
  }
  >.index-cuxiaoPro-morebar{
    width: 100%;
    text-align: center;
    >a{
      display: block;
      height: 30px;
      line-height: 30px;
      background-color: #f4f4f4;
      font-size: 13px;
      background-image: linear-gradient(#ffffff, #f4f4f4);
      margin: 10px;
      border: 1px solid #dddddd;
      border-radius: 4px;
    }
  }
}

// 品牌排行
.index-top10-bar{
  >a{
    display: block;
    width: 100%;
  }
}

// 底部
footer{
  >.index-foot-top{
    margin-top: 10px;
    background: #efefef;
    border-top: 1px solid #c4c4c4;
    border-bottom: 1px solid #c4c4c4;
    height: 34px;
    line-height: 34px;
    clear: both;
    >a{
      float: left;
      font-size: 14px;
      border-right: 1px solid #c4c4c4;
      text-align: center;
      width: 30%;
    }
    >a:last-child{
      width: 40%;
      border-right: none;
      >img{
        width: 15px;
        display: inline-block;
        margin-top: -5px;
        margin-right: 2px;
      }
    }
  }
  >.index-foot-bottom{
    background: #efefef;
    text-align: center;
    font-size: 12px;
    padding: 15px 0;
    color: #666;
    >p:first-child > a:first-child{
      color: red;
    }
  }
}

